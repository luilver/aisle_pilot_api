            "url": {
              "raw": "{{base_url}}/api/v1/shopping_lists/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "shopping_lists",
                "1"
              ]
            },
            "description": "Obtiene una lista de compras específica"
          }
        },
        {
          "name": "Create Shopping List",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Lista de Compras Semanal\",\n  \"store_id\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/shopping_lists",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "shopping_lists"
              ]
            },
            "description": "Crea una nueva lista de compras"
          }
        },
        {
          "name": "Update Shopping List",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Lista Actualizada\",\n  \"store_id\": 2\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/shopping_lists/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "shopping_lists",
                "1"
              ]
            },
            "description": "Actualiza una lista de compras existente"
          }
        },
        {
          "name": "Delete Shopping List",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/shopping_lists/1",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "shopping_lists",
                "1"
              ]
            },
            "description": "Elimina una lista de compras"
          }
        },
        {
          "name": "Get Optimized Shopping Order",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/shopping_lists/1/optimized_order",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "shopping_lists",
                "1",
                "optimized_order"
              ]
            },
            "description": "Obtiene el orden optimizado de compra basado en la ubicación de productos en la tienda"
          }
        }
      ]
    },
    {
      "name": "Shopping List Items",
      "item": [
        {
          "name": "Add Item to Shopping List",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
